<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#100808"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"

            app:cardCornerRadius="100dp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:alpha="1"
                android:background="#000000"
                android:src="@mipmap/doctor"

                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Umidjon Sattorov"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Occupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Dermatologist"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#003FFE"
            android:fontFamily="sans-serif"
            android:text="Edit Profile"
            android:textColorHighlight="#E40A0A"
            android:textColorLink="#FF0000"
            android:textSize="20sp"
            app:iconPadding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75" />

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#858585" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/search_bar_app"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/icon_removebg_preview"
                app:tint="#0D45ED" />


            <TextView
                android:id="@+id/description"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Melanoma diagnosis"
                android:textAlignment="center"
                android:textSize="24sp"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/direction"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/right_direction"
                app:tint="#0D45ED" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/icon_removebg_preview"
                app:tint="#0D45ED" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Basal cell carcinoma"
                android:textAlignment="center"
                android:textSize="24sp"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/right_direction"
                app:tint="#0D45ED" />

        </LinearLayout>

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="#858585" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_bar_chart_24"
                app:tint="#0D45ED" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Statistics on patients"
                android:textAlignment="center"
                android:textSize="24sp"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/right_direction"
                app:tint="#0D45ED" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>